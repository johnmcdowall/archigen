<%= render 'nav' %>

<main class="container mx-auto max-w-4xl xl:max-w-5xl mt-32 md:mt-48 px-4 lg:px-0">

  <div class="lg:w-[650px] flex flex-col gap-y-5 mb-12">
    <h1 class="mb-6 md:max-w-xl md:mx-auto text-center lg:text-left lg:mx-0 lg:max-w-full font-bold text-4xl md:text-6xl/[0.9] xl:text-8xl/[0.9] text-foreground-100"><%= t('landing_page.cta_header') %></h1>
    <p class="md:max-w-xl md:mx-auto lg:mx-0 lg:max-w-full text-center lg:text-left text-xl text-foreground-50"><%= t('landing_page.cta_body') %></p>
    <%= link_to t('landing_page.waitlist_cta_button'), "#waitlist", class: "flex w-full lg:w-fit items-center text-accent-foreground justify-center rounded-lg bg-accent px-6 py-2.5 font-semibold hover:shadow-lg hover:drop-shadow transition duration-200" %>
  </div>

  <%= render partial: 'feature_grid' %>

  <section class="relative max-w-5xl mt-32 mx-auto pb-24 px-5 lg:px-0">
    <div class="hidden lg:block absolute -top-24 -left-24 -z-10 opacity-30 text-foreground-50"><%= inline_svg_tag("images/starburst.svg") %></div>
    <div class=" bg-plate-1 p-10 rounded-2xl mx-auto flex flex-col gap-y-5 justify-center items-center">
      <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold text-foreground-100 text-center"><%= t('landing_page.waitlist_cta_header') %></h3>
      <p class="text-center text-foreground-50"><%= t('landing_page.waitlist_cta_body') %></p>
      <%= turbo_frame_tag :waitlist do %>
        <%= render 'waitlist_emails/form' %>
      <% end %>
    </div>
  </section>

  <section class="py-14">
    <div class="mx-auto max-w-5xl flex flex-col md:flex-row items-center md:items-start md:justify-between">
      <div class="md:w-1/2 flex flex-col items-center mb-12 md:mb-0 md:justify-start md:items-start">
        <%= link_to root_path do %>
          <h2 class="text-3xl text-foreground-100 font-bold "><%= application_name -%></h2>
        <% end %>
        <p class="text-foreground-50 text-sm max-w-xs font-medium">A minimalist life navigation app</p>
      </div>
      <div class="md:w-1/2">
        <div class="flex flex-col gap-x-3 items-center md:items-end">
          <p class="text-foreground-50 font-semibold text-sm">Made in rainy 🌧️ Victoria, BC 🇨🇦</p>
          <p class="text-foreground-50 text-sm">&copy <%= 2023 %> Kantan Designs Inc - All rights reserved.</p>
        </div>
      </div>
    </div>
  </section>
</main>
