<section class="py-14">
  <div class="mx-auto max-w-5xl flex flex-col md:flex-row items-center md:items-start md:justify-between">
    <div class="md:w-1/2 flex flex-col items-center mb-12 md:mb-0 md:justify-start md:items-start">
      <%= link_to root_path do %>
        <h2 class="text-xl text-foreground-100 font-bold "><%= application_name -%></h2>
      <% end %>
      <p class="text-foreground-50 text-sm max-w-xs font-medium">A minimalist life navigation app</p>
    </div>
    <div class="md:w-1/2">
      <div class="flex flex-col gap-y-2 items-center md:items-end">
        <%= link_to "Terms of Service",
              "/terms_of_service.html",
              class: "text-sm text-foreground-50 hover:text-foreground-100" %>
        <%= link_to "Privacy", "/privacy.html", class: "text-sm text-foreground-50 hover:text-foreground-100" %>
        <%= link_to "Cookies", "/cookies.html", class: "text-sm text-foreground-50 hover:text-foreground-100" %>
      </div>
    </div>
  </div>

  <div class="mx-auto mt-6 pt-6 border-t border-foreground-50/20 max-w-5xl flex flex-col md:flex-row md:justify-between">
    <div class="md:w-1/2 flex flex-col md:mb-0 md:justify-start items-center md:items-start">
      <p class="md:text-left text-foreground-50 text-sm">&copy <%= 2023 %> Kantan Designs Inc - All rights reserved.</p>
    </div>
    <div class="md:w-1/2">
      <div class="flex flex-col gap-x-3 items-center md:items-end">
        <p class="md:text-right text-foreground-50 font-semibold text-sm">Made in rainy 🌧️ Victoria, BC 🇨🇦</p>
      </div>
    </div>
  </div>
</section>
